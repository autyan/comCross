<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ComCross.Shell.ViewModels"
             xmlns:views="using:ComCross.Shell.Views"
             mc:Ignorable="d" d:DesignWidth="320" d:DesignHeight="800"
             x:Class="ComCross.Shell.Views.RightToolDock"
             x:DataType="vm:RightToolDockViewModel">
    
    <Grid RowDefinitions="Auto,*">
        <!-- Tool Tabs -->
        <Border Grid.Row="0" Background="#1B242A" BorderBrush="#25303A" BorderThickness="0,0,0,1" Padding="8">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <ToggleButton Classes="tool-tab"
                              IsChecked="{Binding IsSendTabActive}"
                              Click="OnSendTabClick">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <TextBlock Text="ðŸ“¨" FontSize="14" VerticalAlignment="Center" />
                        <TextBlock Text="{Binding L[tool.send]}" VerticalAlignment="Center" />
                    </StackPanel>
                </ToggleButton>
                <ToggleButton Classes="tool-tab"
                              IsChecked="{Binding IsCommandsTabActive}"
                              Click="OnCommandsTabClick">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <TextBlock Text="âš’ï¸" FontSize="14" VerticalAlignment="Center" />
                        <TextBlock Text="{Binding L[tool.commands]}" VerticalAlignment="Center" />
                    </StackPanel>
                </ToggleButton>
            </StackPanel>
        </Border>

        <!-- Tool Content -->
        <Border Grid.Row="1" Background="#1B242A" Padding="16">
            <ScrollViewer>
                <StackPanel Spacing="16">
                    <!-- Send Tool -->
                    <StackPanel Spacing="12" IsVisible="{Binding IsSendTabActive}">
                        <TextBlock Text="{Binding L[tool.send.message]}" FontSize="12" FontWeight="Bold" Foreground="#87909B" />
                        <TextBox x:Name="SendMessageBox"
                                 Watermark="{Binding L[tool.send.message.placeholder]}" 
                                 Height="100" 
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 IsEnabled="{Binding IsConnected}" />
                        
                        <!-- Send Options in compact layout -->
                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto">
                            <!-- Core mode toggle (STR/HEX) -->
                            <Border Grid.Column="0" Grid.Row="0"
                                    CornerRadius="6"
                                    BorderBrush="#25303A"
                                    BorderThickness="1"
                                    Background="#0F1417"
                                    Padding="10,6"
                                    Margin="0,0,8,4"
                                    Cursor="Hand"
                                    PointerPressed="OnToggleSendMode">
                                <TextBlock Text="{Binding SendModeLabel}"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Foreground="#E6EDF3" />
                            </Border>
                            <CheckBox Grid.Column="1" Grid.Row="0" 
                                      x:Name="ClearAfterSendCheckBox" 
                                      Content="{Binding L[tool.send.clearAfterSend]}" 
                                      Margin="8,0,0,4" />
                            <CheckBox Grid.Column="0" Grid.Row="1" 
                                      x:Name="AddCrCheckBox" 
                                      Content="{Binding L[tool.send.addcr]}" 
                                      IsChecked="{Binding Settings.ConnectionDefaultAddCr}" 
                                      Margin="0,4,8,0" />
                            <CheckBox Grid.Column="1" Grid.Row="1" 
                                      x:Name="AddLfCheckBox" 
                                      Content="{Binding L[tool.send.addlf]}" 
                                      IsChecked="{Binding Settings.ConnectionDefaultAddLf}" 
                                      Margin="8,4,0,0" />
                        </Grid>

                        <Button Content="{Binding L[tool.send.button]}" 
                                Classes="accent" 
                                IsEnabled="{Binding IsConnected}" 
                                Click="OnSendClick" />
                        
                        <!-- Stream Actions -->
                        <Separator Background="#25303A" Margin="0,8" />
                        
                        <Grid ColumnDefinitions="*,*">
                            <Button Grid.Column="0" 
                                    Content="{Binding L[menu.clear]}" 
                                    Click="OnClearClick"
                                    IsEnabled="{Binding IsConnected}"
                                    HorizontalAlignment="Stretch" 
                                    Margin="0,0,4,0" />
                            <Button Grid.Column="1" 
                                    Content="{Binding L[menu.export]}" 
                                    Click="OnExportClick"
                                    IsEnabled="{Binding IsConnected}"
                                    HorizontalAlignment="Stretch" 
                                    Margin="4,0,0,0" />
                        </Grid>
                    </StackPanel>

                    <views:CommandCenterView DataContext="{Binding CommandCenter}" IsVisible="{Binding IsActive}" />
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
