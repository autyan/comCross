<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ComCross.Shell.ViewModels"
             mc:Ignorable="d" d:DesignWidth="420" d:DesignHeight="700"
             x:Class="ComCross.Shell.Views.NotificationCenterView"
             x:DataType="vm:NotificationCenterViewModel">
    <Border Padding="16">
    <Grid RowDefinitions="Auto,*">
        <StackPanel Orientation="Horizontal" Spacing="8">
            <Button Content="{Binding LocalizedStrings.NotificationsMarkAllRead}" Click="OnMarkAllReadClick" />
        </StackPanel>

        <Border Grid.Row="1" Background="#0F1417" BorderBrush="#25303A" BorderThickness="1" CornerRadius="6" Margin="0,12,0,0">
            <Grid>
                <TextBlock Text="{Binding LocalizedStrings.NotificationsEmpty}" Foreground="#87909B" 
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           IsVisible="{Binding IsEmpty}" />
                <ListBox ItemsSource="{Binding Items}" Background="#0F1417" BorderThickness="0"
                         IsVisible="{Binding HasNotifications}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="12" BorderBrush="#25303A" BorderThickness="0,0,0,1">
                                <StackPanel Spacing="6">
                                    <TextBlock Text="{Binding Message}" FontSize="12" Foreground="#E6EDF3" TextWrapping="Wrap" />
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}" FontSize="11" Foreground="#87909B" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>
    </Grid>
    </Border>
</UserControl>
