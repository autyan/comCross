<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ComCross.Shell.ViewModels"
             xmlns:views="using:ComCross.Shell.Views"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
             x:Class="ComCross.Shell.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">
    <Grid ColumnDefinitions="220,*">
        <!-- Left navigation -->
        <Border Grid.Column="0" Background="#141B1F" BorderBrush="#25303A" BorderThickness="0,0,1,0">
            <StackPanel Margin="12" Spacing="8">
                <TextBlock Text="{Binding L[settings.title]}" FontSize="13" FontWeight="Bold" Foreground="#E6EDF3" />

                <ListBox ItemsSource="{Binding NavigationEntries}"
                         SelectedItem="{Binding SelectedNavigationEntry}"
                         Background="Transparent"
                         BorderThickness="0"
                         HorizontalAlignment="Stretch">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10,6" Background="Transparent" IsHitTestVisible="{Binding IsSelectable}">
                                <TextBlock Text="{Binding Title}"
                                           FontSize="{Binding TitleFontSize}"
                                           FontWeight="{Binding TitleFontWeight}"
                                           Foreground="{Binding TitleForeground}"
                                           Margin="{Binding TitleMargin}" />
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- Right content -->
        <Grid Grid.Column="1">
            <!-- System settings page -->
            <ScrollViewer IsVisible="{Binding IsSystemSettingsSelected}">
                <StackPanel Spacing="16" Margin="20">
            <!-- General -->
            <StackPanel Spacing="8">
                <TextBlock Text="{Binding L[settings.section.general]}" FontSize="13" FontWeight="Bold" Foreground="#E6EDF3" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Width="280" Margin="0,0,12,8">
                        <TextBlock Text="{Binding L[settings.language]}" FontSize="11" Foreground="#B7C1CC" Margin="0,0,0,4" />
                        <ComboBox ItemsSource="{Binding AvailableLanguages}" 
                                  SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}" 
                                  IsEnabled="{Binding !FollowSystemLanguage}"
                                  HorizontalAlignment="Stretch">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding NativeName}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Width="280" Margin="0,0,12,8">
                        <TextBlock Height="16" Margin="0,0,0,4" />
                        <CheckBox Content="{Binding L[settings.followSystemLanguage]}" IsChecked="{Binding FollowSystemLanguage}" />
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <!-- Logs -->
            <StackPanel Spacing="8">
                <TextBlock Text="{Binding L[settings.section.logs]}" FontSize="13" FontWeight="Bold" Foreground="#E6EDF3" />
                <CheckBox Content="{Binding L[settings.logs.autosave]}" IsChecked="{Binding LogAutoSaveEnabled}" Margin="0,0,0,4" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Width="400" Margin="0,0,12,8">
                        <TextBlock Text="{Binding L[settings.logs.directory]}" FontSize="11" Foreground="#B7C1CC" Margin="0,0,0,4" />
                        <TextBox Text="{Binding LogDirectory}" Watermark="Default: Logs" />
                    </StackPanel>
                    <StackPanel Width="160" Margin="0,0,12,8">
                        <TextBlock Text="{Binding L[settings.logs.maxFileSize]}" FontSize="11" Foreground="#B7C1CC" Margin="0,0,0,4" />
                        <NumericUpDown Minimum="1" Maximum="1024" Value="{Binding LogMaxFileSizeMb}" HorizontalAlignment="Stretch" />
                    </StackPanel>
                    <StackPanel Width="160" Margin="0,0,12,8">
                        <TextBlock Text="{Binding L[settings.logs.maxTotalSize]}" FontSize="11" Foreground="#B7C1CC" Margin="0,0,0,4" />
                        <NumericUpDown Minimum="10" Maximum="4096" Value="{Binding LogMaxTotalSizeMb}" HorizontalAlignment="Stretch" />
                    </StackPanel>
                    <StackPanel Width="280" Margin="0,0,12,8">
                        <TextBlock Height="16" Margin="0,0,0,4" />
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <CheckBox IsChecked="{Binding LogAutoDeleteEnabled}" />
                            <TextBlock Text="{Binding L[settings.logs.autoDelete]}" VerticalAlignment="Center" />
                            <Border Background="#F5A524" CornerRadius="8" Width="16" Height="16" VerticalAlignment="Center"
                                    ToolTip.Tip="{Binding L[settings.logs.autoDeleteRuleTip]}">
                                <TextBlock Text="!" FontSize="11" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#141B1F" />
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </WrapPanel>
                
                <!-- Database Persistence -->
                <Border Background="#1B242A" BorderBrush="#25303A" BorderThickness="1" CornerRadius="4" Padding="12" Margin="0,8,0,0">
                    <StackPanel Spacing="8">
                        <CheckBox Content="{Binding L[settings.logs.enableDatabase]}" 
                                  IsChecked="{Binding LogDatabasePersistenceEnabled}" />
                        <TextBlock Text="{Binding L[settings.logs.databaseWarning]}" 
                                   FontSize="11" 
                                   Foreground="#87909B" 
                                   TextWrapping="Wrap" 
                                   Margin="24,0,0,0" />
                        <StackPanel Width="400" HorizontalAlignment="Left" Margin="24,4,0,0" IsEnabled="{Binding IsDatabaseDirectoryEnabled}">
                            <TextBlock Text="{Binding L[settings.logs.databaseDirectory]}" FontSize="11" Foreground="#B7C1CC" Margin="0,0,0,4" />
                            <TextBox Text="{Binding LogDatabaseDirectory}" Watermark="Default: AppData" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- App Logs -->
            <StackPanel Spacing="8">
                <TextBlock Text="{Binding L[settings.section.appLogs]}" FontSize="13" FontWeight="Bold" Foreground="#E6EDF3" />
                <CheckBox Content="{Binding L[settings.appLogs.enabled]}" IsChecked="{Binding AppLogEnabled}" Margin="0,0,0,4" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Width="400" Margin="0,0,12,8">
                        <TextBlock Text="{Binding L[settings.appLogs.directory]}" FontSize="11" Foreground="#B7C1CC" Margin="0,0,0,4" />
                        <TextBox Text="{Binding AppLogDirectory}" Watermark="Default: AppLogs" />
                    </StackPanel>
                    <StackPanel Width="160" Margin="0,0,12,8">
                        <TextBlock Text="{Binding L[settings.appLogs.format]}" FontSize="11" Foreground="#B7C1CC" Margin="0,0,0,4" />
                        <ComboBox ItemsSource="{Binding AppLogFormats}" SelectedItem="{Binding AppLogFormat}" HorizontalAlignment="Stretch" />
                    </StackPanel>
                    <StackPanel Width="160" Margin="0,0,12,8">
                        <TextBlock Text="{Binding L[settings.appLogs.minLevel]}" FontSize="11" Foreground="#B7C1CC" Margin="0,0,0,4" />
                        <ComboBox ItemsSource="{Binding AppLogLevels}" SelectedItem="{Binding AppLogMinLevel}" HorizontalAlignment="Stretch" />
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <!-- Notifications -->
            <StackPanel Spacing="8">
                <TextBlock Text="{Binding L[settings.section.notifications]}" FontSize="13" FontWeight="Bold" Foreground="#E6EDF3" />
                <WrapPanel Orientation="Horizontal">
                    <CheckBox Content="{Binding L[settings.notifications.storage]}" IsChecked="{Binding NotificationsStorageAlertsEnabled}" Margin="0,0,16,8" />
                    <CheckBox Content="{Binding L[settings.notifications.connection]}" IsChecked="{Binding NotificationsConnectionAlertsEnabled}" Margin="0,0,16,8" />
                    <CheckBox Content="{Binding L[settings.notifications.export]}" IsChecked="{Binding NotificationsExportAlertsEnabled}" Margin="0,0,16,8" />
                    <StackPanel Width="160" Margin="0,0,12,8">
                        <TextBlock Text="{Binding L[settings.notifications.retentionDays]}" FontSize="11" Foreground="#B7C1CC" Margin="0,0,0,4" />
                        <NumericUpDown Minimum="1" Maximum="365" Value="{Binding NotificationsRetentionDays}" HorizontalAlignment="Stretch" />
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <!-- Connection -->
            <StackPanel Spacing="8">
                <TextBlock Text="{Binding L[settings.section.connection]}" FontSize="13" FontWeight="Bold" Foreground="#E6EDF3" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Width="180" Margin="0,0,12,8">
                        <TextBlock Text="{Binding L[settings.connection.defaultBaudRate]}" FontSize="11" Foreground="#B7C1CC" Margin="0,0,0,4" />
                        <NumericUpDown Minimum="300" Maximum="2000000" Value="{Binding ConnectionDefaultBaudRate}" HorizontalAlignment="Stretch" />
                    </StackPanel>
                    <StackPanel Width="160" Margin="0,0,12,8">
                        <TextBlock Text="{Binding L[settings.connection.defaultEncoding]}" FontSize="11" Foreground="#B7C1CC" Margin="0,0,0,4" />
                        <TextBox Text="{Binding ConnectionDefaultEncoding}" />
                    </StackPanel>
                    <StackPanel Width="180" Margin="0,0,12,8">
                        <TextBlock Height="16" Margin="0,0,0,4" />
                        <CheckBox Content="{Binding L[settings.connection.defaultAddCr]}" IsChecked="{Binding ConnectionDefaultAddCr}" />
                    </StackPanel>
                    <StackPanel Width="180" Margin="0,0,12,8">
                        <TextBlock Height="16" Margin="0,0,0,4" />
                        <CheckBox Content="{Binding L[settings.connection.defaultAddLf]}" IsChecked="{Binding ConnectionDefaultAddLf}" />
                    </StackPanel>
                    <StackPanel Width="280" Margin="0,0,12,8">
                        <TextBlock Text="{Binding L[settings.connection.existingSessionBehavior]}" FontSize="11" Foreground="#B7C1CC" Margin="0,0,0,4" />
                        <ComboBox ItemsSource="{Binding ConnectionBehaviorOptions}" 
                                  SelectedItem="{Binding SelectedConnectionBehavior, Mode=TwoWay}" 
                                  HorizontalAlignment="Stretch">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Label}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <!-- Display -->
            <StackPanel Spacing="8">
                <TextBlock Text="{Binding L[settings.section.display]}" FontSize="13" FontWeight="Bold" Foreground="#E6EDF3" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Width="180" Margin="0,0,12,8">
                        <TextBlock Text="{Binding L[settings.display.maxMessages]}" FontSize="11" Foreground="#B7C1CC" Margin="0,0,0,4" />
                        <NumericUpDown Minimum="100" Maximum="200000" Value="{Binding DisplayMaxMessages}" HorizontalAlignment="Stretch" />
                    </StackPanel>
                    <StackPanel Width="200" Margin="0,0,12,8">
                        <TextBlock Text="{Binding L[settings.display.timestampFormat]}" FontSize="11" Foreground="#B7C1CC" Margin="0,0,0,4" />
                        <TextBox Text="{Binding DisplayTimestampFormat}" />
                    </StackPanel>
                    <StackPanel Width="180" Margin="0,0,12,8">
                        <TextBlock Height="16" Margin="0,0,0,4" />
                        <CheckBox Content="{Binding L[settings.display.autoScroll]}" IsChecked="{Binding DisplayAutoScroll}" />
                    </StackPanel>
                </WrapPanel>
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Width="200" Margin="0,0,12,8">
                        <TextBlock Text="{Binding L[settings.display.fontFamily]}" FontSize="11" Foreground="#B7C1CC" Margin="0,0,0,4" />
                        <TextBox Text="{Binding DisplayFontFamily}" />
                    </StackPanel>
                    <StackPanel Width="120" Margin="0,0,12,8">
                        <TextBlock Text="{Binding L[settings.display.fontSize]}" FontSize="11" Foreground="#B7C1CC" Margin="0,0,0,4" />
                        <NumericUpDown Minimum="8" Maximum="24" Value="{Binding DisplayFontSize}" HorizontalAlignment="Stretch" />
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <!-- Export -->
            <StackPanel Spacing="8">
                <TextBlock Text="{Binding L[settings.section.export]}" FontSize="13" FontWeight="Bold" Foreground="#E6EDF3" />
                <WrapPanel Orientation="Horizontal">
                    <StackPanel Width="160" Margin="0,0,12,8">
                        <TextBlock Text="{Binding L[settings.export.defaultFormat]}" FontSize="11" Foreground="#B7C1CC" Margin="0,0,0,4" />
                        <TextBox Text="{Binding ExportDefaultFormat}" />
                    </StackPanel>
                    <StackPanel Width="400" Margin="0,0,12,8">
                        <TextBlock Text="{Binding L[settings.export.defaultDirectory]}" FontSize="11" Foreground="#B7C1CC" Margin="0,0,0,4" />
                        <TextBox Text="{Binding ExportDefaultDirectory}" />
                    </StackPanel>
                    <StackPanel Width="180" Margin="0,0,12,8">
                        <TextBlock Text="{Binding L[settings.export.range]}" FontSize="11" Foreground="#B7C1CC" Margin="0,0,0,4" />
                        <ComboBox ItemsSource="{Binding ExportRangeModeOptions}" SelectedItem="{Binding SelectedExportRangeMode}" HorizontalAlignment="Stretch">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Label}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Width="160" Margin="0,0,12,8">
                        <TextBlock Text="{Binding L[settings.export.range.count]}" FontSize="11" Foreground="#B7C1CC" Margin="0,0,0,4" />
                        <NumericUpDown Minimum="1" Maximum="1000000" Value="{Binding ExportRangeCount}" HorizontalAlignment="Stretch" />
                    </StackPanel>
                </WrapPanel>
            </StackPanel>

            <views:PluginManagerView DataContext="{Binding}" />
                </StackPanel>
            </ScrollViewer>

            <!-- Plugin settings page -->
            <ScrollViewer IsVisible="{Binding IsPluginSettingsSelected}">
                <StackPanel Spacing="12" Margin="20">
                    <TextBlock Text="{Binding SelectedNavigationEntry.Title}" FontSize="13" FontWeight="Bold" Foreground="#E6EDF3" />
                    <ContentControl Content="{Binding PluginSettingsPanel}" />
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
