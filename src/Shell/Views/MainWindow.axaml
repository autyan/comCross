<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:ComCross.Shell.ViewModels"
        xmlns:views="using:ComCross.Shell.Views"
        xmlns:services="using:ComCross.Shell.Services"
        mc:Ignorable="d" d:DesignWidth="1440" d:DesignHeight="900"
        x:Class="ComCross.Shell.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="{Binding Title}"
        Width="1440" Height="900"
        MinWidth="1280" MinHeight="720">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Top Bar -->
        <Border Grid.Row="0" Background="#141B1F" BorderBrush="#25303A" BorderThickness="0,0,0,1" Padding="16,12">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Orientation="Horizontal" Spacing="16">
                    <TextBlock Text="ComCross" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" />
                    <TextBlock Text="{Binding ActiveSession.Name}" FontSize="14" VerticalAlignment="Center" Foreground="#B7C1CC" />
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button Content="{x:Static services:LocalizationManager.MenuConnect}" Classes="accent" Click="OnConnectClick" />
                    <Button Content="{x:Static services:LocalizationManager.MenuDisconnect}" Click="OnDisconnectClick" IsEnabled="{Binding IsConnected}" />
                    <Button Content="{x:Static services:LocalizationManager.MenuClear}" Click="OnClearClick" />
                    <Button Content="{x:Static services:LocalizationManager.MenuExport}" Click="OnExportClick" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" ColumnDefinitions="280,*,320">
            <!-- Left Sidebar -->
            <Border Grid.Column="0" Background="#1B242A" BorderBrush="#25303A" BorderThickness="0,0,1,0">
                <views:LeftSidebar DataContext="{Binding}" />
            </Border>

            <!-- Center Workspace -->
            <Border Grid.Column="1" Background="#0F1417">
                <views:MessageStreamView DataContext="{Binding}" />
            </Border>

            <!-- Right Tool Dock -->
            <Border Grid.Column="2" Background="#1B242A" BorderBrush="#25303A" BorderThickness="1,0,0,0">
                <views:RightToolDock DataContext="{Binding}" />
            </Border>
        </Grid>

        <!-- Bottom Status Bar -->
        <Border Grid.Row="2" Background="#141B1F" BorderBrush="#25303A" BorderThickness="0,1,0,0" Padding="16,8">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Text="{x:Static services:LocalizationManager.StatusReady}" FontSize="12" VerticalAlignment="Center" Foreground="#87909B" />
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="16">
                    <TextBlock Text="{Binding ActiveSession.RxBytes, StringFormat={}{0}}" FontSize="12" Foreground="#2CB5A9" />
                    <TextBlock Text="{Binding ActiveSession.TxBytes, StringFormat={}{0}}" FontSize="12" Foreground="#3AA0FF" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
