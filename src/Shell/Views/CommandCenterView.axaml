<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ComCross.Shell.ViewModels"
             mc:Ignorable="d" d:DesignWidth="320" d:DesignHeight="600"
             x:Class="ComCross.Shell.Views.CommandCenterView"
             x:DataType="vm:CommandCenterViewModel">
    <StackPanel Spacing="12">
        <TextBlock Text="{Binding L[tool.commands]}" FontSize="12" FontWeight="Bold" Foreground="#87909B" />

        <Border Background="#0F1417" BorderBrush="#25303A" BorderThickness="1" CornerRadius="6">
            <Grid>
                <TextBlock Text="{Binding L[tool.commands.empty]}" Foreground="#87909B"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           IsVisible="{Binding Commands.Count, Converter={StaticResource IsZeroConverter}}" />
                <ListBox ItemsSource="{Binding Commands}"
                         SelectedItem="{Binding SelectedCommand}"
                         Background="#0F1417"
                         BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="8,6">
                                <TextBlock Text="{Binding Name}" FontSize="12" Foreground="#E6EDF3" />
                                <TextBlock Text="{Binding Group}" FontSize="11" Foreground="#87909B" />
                                <TextBlock Text="{Binding Hotkey}" FontSize="10" Foreground="#6C7580" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <StackPanel Orientation="Horizontal" Spacing="8">
            <Button Content="{Binding L[tool.commands.send]}" Click="OnSendClick" />
            <Button Content="{Binding L[tool.commands.add]}" Click="OnNewClick" />
            <Button Content="{Binding L[tool.commands.delete]}" Click="OnDeleteClick" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="8">
            <Button Content="{Binding L[tool.commands.import]}" Click="OnImportClick" Classes="secondary" />
            <Button Content="{Binding L[tool.commands.export]}" Click="OnExportClick" Classes="secondary" />
        </StackPanel>

        <Separator />

        <StackPanel Spacing="8">
            <TextBlock Text="{Binding L[tool.commands.name]}" FontSize="12" Foreground="#B7C1CC" />
            <TextBox Text="{Binding EditorName}" />

            <TextBlock Text="{Binding L[tool.commands.payload]}" FontSize="12" Foreground="#B7C1CC" />
            <TextBox Text="{Binding EditorPayload}" AcceptsReturn="True" Height="80" />

            <StackPanel Orientation="Horizontal" Spacing="12">
                <StackPanel>
                    <TextBlock Text="{Binding L[tool.commands.type]}" FontSize="12" Foreground="#B7C1CC" />
                    <ComboBox ItemsSource="{Binding PayloadTypeOptions}" SelectedItem="{Binding SelectedPayloadType}" Width="120">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Label}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="{Binding L[tool.commands.encoding]}" FontSize="12" Foreground="#B7C1CC" />
                    <TextBox Text="{Binding EditorEncoding}" Width="120" />
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="12">
                <StackPanel>
                    <TextBlock Text="{Binding L[tool.commands.scope]}" FontSize="12" Foreground="#B7C1CC" />
                    <ComboBox ItemsSource="{Binding ScopeOptions}" SelectedItem="{Binding SelectedScope}" Width="120">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Label}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="{Binding L[tool.commands.group]}" FontSize="12" Foreground="#B7C1CC" />
                    <TextBox Text="{Binding EditorGroup}" Width="120" />
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="12">
                <CheckBox Content="{Binding L[tool.commands.appendCr]}" IsChecked="{Binding EditorAppendCr}" />
                <CheckBox Content="{Binding L[tool.commands.appendLf]}" IsChecked="{Binding EditorAppendLf}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="12">
                <StackPanel>
                    <TextBlock Text="{Binding L[tool.commands.hotkey]}" FontSize="12" Foreground="#B7C1CC" />
                    <TextBox Text="{Binding EditorHotkey}" Width="160" />
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="{Binding L[tool.commands.sortOrder]}" FontSize="12" Foreground="#B7C1CC" />
                    <TextBox Text="{Binding EditorSortOrder}" Width="80" />
                </StackPanel>
            </StackPanel>

            <Button Content="{Binding L[tool.commands.save]}" Classes="accent" Click="OnSaveClick" />
        </StackPanel>
    </StackPanel>
</UserControl>
