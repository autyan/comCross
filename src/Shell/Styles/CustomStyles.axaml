<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Button Styles -->
    <Style Selector="Button">
        <Setter Property="Background" Value="#1B242A" />
        <Setter Property="Foreground" Value="#E6EDF3" />
        <Setter Property="BorderBrush" Value="#25303A" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="FontSize" Value="13" />
    </Style>

    <Style Selector="Button:pointerover">
        <Setter Property="Background" Value="#25303A" />
    </Style>

    <Style Selector="Button.accent">
        <Setter Property="Background" Value="#3AA0FF" />
        <Setter Property="Foreground" Value="#FFFFFF" />
        <Setter Property="BorderBrush" Value="#3AA0FF" />
    </Style>

    <Style Selector="Button.accent:pointerover">
        <Setter Property="Background" Value="#4FB0FF" />
    </Style>

    <Style Selector="Button.secondary">
        <Setter Property="Background" Value="#141B1F" />
        <Setter Property="Foreground" Value="#B7C1CC" />
    </Style>

    <!-- Tool Tab Styles (ToggleButton) -->
    <Style Selector="ToggleButton.tool-tab">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="#87909B" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="Padding" Value="10,6" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style Selector="ToggleButton.tool-tab:pointerover">
        <Setter Property="Background" Value="#25303A" />
        <Setter Property="Foreground" Value="#B7C1CC" />
    </Style>

    <Style Selector="ToggleButton.tool-tab:checked">
        <Setter Property="Background" Value="#2F3A44" />
        <Setter Property="Foreground" Value="#3AA0FF" />
        <Setter Property="BorderThickness" Value="0,0,0,2" />
        <Setter Property="BorderBrush" Value="#3AA0FF" />
    </Style>

    <Style Selector="ToggleButton.tool-tab:checked:pointerover">
        <Setter Property="Background" Value="#2F3A44" />
        <Setter Property="Foreground" Value="#5BB5FF" />
    </Style>

    <!-- Button Styles (kept for backward compatibility) -->
    <Style Selector="Button.tool-tab">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="#87909B" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="Padding" Value="8,6" />
    </Style>

    <Style Selector="Button.tool-tab:pointerover">
        <Setter Property="Background" Value="#25303A" />
        <Setter Property="Foreground" Value="#E6EDF3" />
    </Style>

    <!-- TextBox Styles -->
    <Style Selector="TextBox">
        <Setter Property="Background" Value="#1B242A" />
        <Setter Property="Foreground" Value="#E6EDF3" />
        <Setter Property="BorderBrush" Value="#25303A" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="10,8" />
        <Setter Property="FontSize" Value="13" />
    </Style>

    <Style Selector="TextBox:focus">
        <Setter Property="BorderBrush" Value="#3AA0FF" />
    </Style>

    <!-- ComboBox Styles -->
    <Style Selector="ComboBox">
        <Setter Property="Background" Value="#1B242A" />
        <Setter Property="Foreground" Value="#E6EDF3" />
        <Setter Property="BorderBrush" Value="#25303A" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="FontSize" Value="13" />
    </Style>

    <Style Selector="ComboBoxItem">
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
    </Style>

    <!-- CheckBox Styles -->
    <Style Selector="CheckBox">
        <Setter Property="Foreground" Value="#E6EDF3" />
        <Setter Property="FontSize" Value="13" />
    </Style>

    <!-- ListBox Styles -->
    <Style Selector="ListBox">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="#E6EDF3" />
    </Style>

    <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
        <Setter Property="Background" Value="#25303A" />
    </Style>

    <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#1B242A" />
    </Style>

    <!-- Separator -->
    <Style Selector="Separator">
        <Setter Property="Background" Value="#25303A" />
        <Setter Property="Height" Value="1" />
    </Style>
</Styles>
