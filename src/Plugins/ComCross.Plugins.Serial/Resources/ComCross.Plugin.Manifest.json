      "uiSchema": {
        "uiSchemaVersion": 1,
        "titleKey": "serial.adapter.settings.scan.title",
        "fields": [
          {
            "key": "scanPatterns",
            "control": "text",
            "labelKey": "serial.adapter.settings.scan.patterns",
            "defaultValue": "/dev/ttyUSB*,/dev/ttyACM*,/dev/serial/by-id/*,/dev/serial/by-path/*,/dev/rfcomm*,/dev/ttyGS*,/dev/tnt*,/dev/ttyAMA*,/dev/ttyS0,/dev/ttyS1,/dev/ttyS2,/dev/ttyS3"
          }
        ],
        "layout": {
          "kind": "stack",
          "orientation": "vertical",
          "spacing": 12,
          "children": [
            { "kind": "field", "key": "scanPatterns", "labelWidth": 3, "totalWidth": 10 }
          ]
        }
      }
    }
