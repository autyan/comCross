{
  "id": "serial.adapter",
  "name": "Serial Adapter",
  "version": "0.3.2",
  "targetCoreVersion": "0.3",
  "entryPoint": "ComCross.Plugins.Serial.SerialBusAdapterPlugin",
  "toolGroup": "adapters",
  "permissions": ["serial.read", "serial.write", "workspace.read"],
  "settingsPages": [
    {
      "id": "serial-scan",
